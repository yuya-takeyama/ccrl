{
	"name": "ccrl",
	"version": "0.1.0",
	"description": "Claude Code Remote Launcher",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"test": "vitest run",
		"lint": "biome ci .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"all": "pnpm format && pnpm lint && pnpm typecheck && pnpm test"
	},
	"dependencies": {
		"@slack/bolt": "^4.6.0",
		"zod": "^4.3.6"
	},
	"packageManager": "pnpm@10.30.3",
	"engines": {
		"node": "^24.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@slack/types": "^2.20.0",
		"@types/node": "^24.10.14",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
